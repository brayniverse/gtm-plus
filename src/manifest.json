{
	"manifest_version": 2,

	"name": "GTM+s",
	"description": "GTM+ fixes irritating interface issues for Google Tag Manager. For example, adds search fields in the sidebar.",
	"version": "1.0",

	"content_scripts": [
		{
			"css":     ["assets/css/style.css"],
			"js":      ["assets/js/background.js"],
			"matches": ["https://www.google.com/tagmanager/*"],
			"run_at": "document_idle"
		}
	],

	"icons": {
		"16": "assets/img/icon16.png",
		"48": "assets/img/icon48.png",
		"128": "assets/img/icon128.png"
	}
}